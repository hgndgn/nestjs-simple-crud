{
  "name": "nestjs-simple-crud",
  "version": "0.0.1",
  "description": "A simple Nestjs project, that uses mongodb for CRUD operations.",
  "author": "Hüseyin Gündogan",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "clean:dist": "rm -rf dist",
    "clean:cov": "rm -rf coverage",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/app/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/common": "^6.10.14",
    "@nestjs/core": "^6.10.14",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.10.14",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.10",
    "@types/lodash": "^4.14.149",
    "@types/validator": "^12.0.1",
    "bcrypt": "^5.0.0",
    "faker": "^4.1.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.3",
    "nest-winston": "^1.3.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "validator": "^12.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.2",
    "@types/mongoose": "^5.7.3",
    "@types/node": "^13.1.6",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-essentials": "^6.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globals": {
      "ts-jest": {}
    },
    "rootDir": "src/app",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@auth/(.*)$": "<rootDir>/auth/$1",
      "^@config/(.*)$": "<rootDir>/../../config/$1",
      "^@database/(.*)$": "<rootDir>/database/$1",
      "^@logger/(.*)$": "<rootDir>/logger/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@user/(.*)$": "<rootDir>/user/$1"
    }
  }
}
